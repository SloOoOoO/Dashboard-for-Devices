<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- 1) /dashboard (exact) -> backend root -->
        <rule name="dashboard-root" stopProcessing="true">
          <match url="^dashboard$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/" appendQueryString="true" />
        </rule>

        <!-- 2) /dashboard/... -> backend /... -->
        <rule name="dashboard-all" stopProcessing="true">
          <match url="^dashboard/(.*)$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/{R:1}" appendQueryString="true" />
        </rule>

        <!-- 3) Absolute static assets from the app -->
        <rule name="static-files" stopProcessing="true">
          <match url="^static/(.*)$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/static/{R:1}" appendQueryString="true" />
        </rule>

        <!-- 4) API endpoints -->
        <rule name="api" stopProcessing="true">
          <match url="^api/(.*)$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/api/{R:1}" appendQueryString="true" />
        </rule>

        <!-- 5) Map image (keeps query string ?floor_id=...) -->
        <rule name="map-image" stopProcessing="true">
          <match url="^map-image$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/map-image" appendQueryString="true" />
        </rule>

        <!-- (Optional) favicon passthrough if you add one later -->
        <rule name="favicon" stopProcessing="true">
          <match url="^favicon\.ico$" />
          <action type="Rewrite" url="http://127.0.0.1:8080/favicon.ico" appendQueryString="true" />
        </rule>
      </rules>
    </rewrite>

    <!-- (Optional) Increase proxy timeouts for large PDFs -->
    <proxy enabled="true" />
  </system.webServer>
</configuration>